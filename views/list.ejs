<%- include("header") -%>


    <div class="box" id="heading">
    <% if (listTitle === "Saturday") { %>
        <h1 style="color: yellow">It is <%= listTitle %>!!! Have a great weekend</h1>
   <% } else { %>
    <h1 style="color:rgb(255, 255, 255)">It is <%= listTitle %>!!! Have fun this week!</h1>
    <% } %>
    </div>

    <div class="box">
   <% for (var i=0; i<newListItems.length; i++) { %>
        <div class="item">
         <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
    
        <% } %>   
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
</div>

  
